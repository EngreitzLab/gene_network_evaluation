Bootstrap: docker
From: ubuntu:20.04

%environment
    # PATHS
    export PATH=/opt/miniconda3/bin:$PATH
    . /opt/miniconda3/etc/profile.d/conda.sh
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   bedtools

    # conda
    mkdir -p /opt/miniconda3
    cd /opt/miniconda3 
    wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
    bash Miniconda3-latest-Linux-x86_64.sh -p /opt/miniconda3 -b -f
    rm Miniconda3-latest-Linux-x86_64.sh
    export PATH=/opt/miniconda3/bin:$PATH
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/miniconda3/lib/

    # Install conda and mamba
    conda update conda -y
    . /opt/miniconda3/etc/profile.d/conda.sh
    conda install -n base -c conda-forge mamba

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.10 \
    r-base==4.2 \
    r-matrix==1.6.1 \
    r-monocle3 \
    r-vgam \
    r-glasso \
    bioconductor-gviz \
    bioconductor-genomicranges \
    bioconductor-rtracklayer \
    bioconductor-rhdf5 \
    r-devtools \
    pip \
    cython \
    pybedtools \
    muon

    # Install cicero
    conda activate env
    Rscript -e "devtools::install_github('cole-trapnell-lab/cicero-release', ref = 'monocle3', upgrade = 'never', threads = 8)"

    # Install CellOracle
    pip install celloracle==0.12.1

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
